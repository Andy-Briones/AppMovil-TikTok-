<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="0dp">

        <Button
            android:id="@+id/btnSalir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cerrar Sesion"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.057"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.046" />

        <TextView
            android:id="@+id/nombreUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Usuario"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/visualizacionPerfil"
            app:layout_constraintHorizontal_bias="0.727"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/visualizacionPerfil"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="16dp"

            app:icon="@drawable/outline_footprint_24"
            app:iconTint="@color/black"
            app:layout_constraintEnd_toStartOf="@+id/ajustesPerfil"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/ajustesPerfil"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="40dp"
            app:icon="@drawable/outline_format_align_justify_24"
            app:iconTint="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/perfilUsuario"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/ic_launcher_foreground"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/nombreUsuario" />

        <TextView
            android:id="@+id/arrobaUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            app:layout_constraintTop_toBottomOf="@id/perfilUsuario"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/estadisticasLayout"
            android:layout_width="255dp"
            android:layout_height="32dp"
            android:layout_marginTop="3dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/arrobaUsuario">

            <TextView
                android:id="@+id/siguiendo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Siguiendo\n100"
                android:textAlignment="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/seguidores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seguidores\n200"
                android:textAlignment="center"
                app:layout_constraintEnd_toStartOf="@id/meGustaTotal"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@id/siguiendo"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/meGustaTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Me gusta\n300"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/descripcion"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:layout_width="352dp"
            android:layout_height="29dp"
            android:layout_marginTop="8dp"
            android:text="Esta es mi descripciÃ³n"
            android:textAlignment="center"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/estadisticasLayout" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/botonesPerfil"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/descripcion">

            <Button
                android:id="@+id/editarPerfil"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:text="Editar Perfil"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/compartirPerfil"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteY="0dp" />

            <Button
                android:id="@+id/compartirPerfil"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_width="124dp"
                android:layout_height="47dp"
                android:text="Compartir"
                android:textColor="@color/black"
                app:layout_constraintEnd_toStartOf="@id/encontrarAmigos"
                app:layout_constraintHorizontal_bias="0.686"
                app:layout_constraintStart_toEndOf="@id/editarPerfil"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:layout_editor_absoluteY="1dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/encontrarAmigos"
                style="@style/Widget.Material3.Button.ElevatedButton"
                app:iconTint="@color/black"
                android:layout_width="68dp"
                android:layout_height="49dp"
                android:layout_marginEnd="40dp"
                android:textColor="@color/black"
                app:icon="@drawable/outline_group_add_24"
                app:layout_constraintStart_toEndOf="@+id/compartirPerfil"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:layout_editor_absoluteY="1dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/botonesPerfil"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:tabMode="fixed"
            app:tabGravity="fill"
            app:tabIndicatorColor="@color/black"
            app:tabSelectedTextColor="@color/black"
            app:tabTextColor="@android:color/darker_gray"
            app:tabIconTint="@color/black">

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tab_videos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:icon="@drawable/baseline_add_road_24" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tab_privados"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:icon="@drawable/baseline_lock_24" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tab_compartidos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:icon="@drawable/outline_cycle_24" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tab_favoritos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:icon="@drawable/outline_bookmark_24" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tab_megusta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:icon="@drawable/baseline_favorite_24" />

        </com.google.android.material.tabs.TabLayout>


        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_nav"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#000000"
            app:itemIconTint="@android:color/white"
            app:itemTextColor="@android:color/white"
            app:menu="@menu/boton_nav_menu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>